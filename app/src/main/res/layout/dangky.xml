<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="141sp"
        android:layout_height="102sp"
        android:layout_marginStart="132sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo100" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148sp"
        android:layout_marginTop="8sp"
        android:text="Đăng Ký"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Tên"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <EditText
        android:id="@+id/edtTen"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:hint="Nhập Tên"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Họ và Tên đệm"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTen" />
    <EditText
        android:id="@+id/edtTenDem"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Nhập Họ và Tên đệm"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Email"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTenDem" />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Nhập Email"
        android:inputType="textEmailAddress"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Số điện thoại"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />
    <EditText
        android:id="@+id/edtSDT"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Nhập Số điện thoại"
        android:inputType="phone"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Tên đăng nhập"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSDT" />
    <EditText
        android:id="@+id/edtTenDangNhap"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Nhập Tên đăng nhập"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Mật khẩu"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTenDangNhap" />
    <EditText
        android:id="@+id/edtMatKhau"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="Xác thực lại mật khẩu"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhau" />
    <EditText
        android:id="@+id/edtXacThucMatKhau"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="Xác thực mật khẩu"
        android:inputType="textPassword"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="địa chỉ"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtXacThucMatKhau" />
    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="351sp"
        android:layout_height="48sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:hint="địa chỉ"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/cbChapNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Tôi chấp nhận các điều khoản"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDiaChi" />

    <TextView
        android:id="@+id/tvDocDieuKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Đọc điều khoản"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbChapNhan" />

    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="189dp"
        android:layout_height="51dp"
        android:text="Đăng Ký"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDocDieuKhoan" />

    <TextView
        android:id="@+id/tvDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="8dp"
        android:text="Login Link"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDangKy" />


</androidx.constraintlayout.widget.ConstraintLayout>